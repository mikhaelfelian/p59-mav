# =====================================
# Root .htaccess (di p59-mav/.htaccess)
# =====================================

Options +FollowSymlinks -Indexes
RewriteEngine On

# Jika project ada di subfolder, sesuaikan base-nya:
# RewriteBase /p59-mav/

# Hilangkan 'public' di URL
# -------------------------
# /assets/... → /public/assets/...
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^assets/(.*)$ public/assets/$1 [L]

# /themes/... → /public/themes/...
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^themes/(.*)$ public/themes/$1 [L]

# /images/... → /public/images/...
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^images/(.*)$ public/images/$1 [L]

# ---------------------------------------------------
# CodeIgniter routing (biar index.php tetap berfungsi)
# ---------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/index.php/$1 [L]

# Redirect aliases
RewriteRule ^frontend-location/?$ /location [R=301,L]
RewriteRule ^katalog/?$ /frontend/catalog [R=301,L]


# Optional: nonaktifkan server signature
ServerSignature Off 
